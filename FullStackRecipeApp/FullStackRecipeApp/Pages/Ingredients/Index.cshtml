@page
@model FullStackRecipeApp.Pages.Ingredients.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1 class="page-headers">Ingredienser</h1>

@if (Model.AccessControl.IsLoggedIn())
{
    <div class="frontpage-section create-new-button">

        <a asp-page="Create">Skapa ny ingrediens</a>
    </div>
}


<form method="get">
    <div class="listing-options">

        <div>
            <select asp-for="SortingKey" asp-items="Html.GetEnumSelectList<SortingKey>()"></select>
        </div>
        <div>
            <select asp-for="FilterKey" asp-items="Html.GetEnumSelectList<FilterKey>()"></select>
        </div>
        <div>
            <input type="text" asp-for="SearchTerm" placeholder="Sök" />
            <button type="submit" class="search-button"><i class="fa fa-search"></i></button>
        </div>
    </div>
</form>

<table class="list-table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ingredients[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ingredients[0].FoodCategory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ingredients[0].DietCategory)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Ingredients)
        {
            <tr>
                <td>
                    <a asp-page="./Details" asp-route-id="@item.ID">@Html.DisplayFor(modelItem => item.Name)</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FoodCategory)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DietCategory)
                </td>

            </tr>
        }
    </tbody>
</table>
