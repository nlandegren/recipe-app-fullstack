@page
@model FullStackRecipeApp.Pages.Ingredients.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Ingredienser</h1>

@if (Model.IsLoggedIn)
{
    <p>
        <a asp-page="Create">Skapa ny ingrediens</a>
    </p>
}


<form method="get">
    <table>
        <tbody>
            <tr>
                <th><label for="SortingKey">Sortera</label></th>
                <td><select asp-for="SortingKey" asp-items="Html.GetEnumSelectList<SortingKey>()"></select></td>
                <th><label for="FilterKey">Filtrera efter diet</label></th>
                <td><select asp-for="FilterKey" asp-items="Html.GetEnumSelectList<FilterKey>()"></select></td>
            </tr>
        </tbody>
    </table>
    <button type="submit">Sök</button>
</form>

<table>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ingredients[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ingredients[0].FoodCategory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ingredients[0].DietCategory)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Ingredients)
        {
        <tr>
            <td>
                <a asp-page="./Details" asp-route-id="@item.ID">@Html.DisplayFor(modelItem => item.Name)</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FoodCategory)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DietCategory)
            </td>
            
            <td>
                @if (Model.IsLoggedIn)
                {
                    <a asp-page="./Edit" asp-route-id="@item.ID">Redigera</a>
                    <a asp-page="./Delete" asp-route-id="@item.ID">Ta bort</a>
                }
            </td>
            

        </tr>
        }
    </tbody>
</table>
