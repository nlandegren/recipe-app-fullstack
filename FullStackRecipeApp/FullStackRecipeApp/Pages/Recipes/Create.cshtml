@page
@model FullStackRecipeApp.Pages.Recipes.CreateModel


<h1 class="page-headers">Skapa nytt recept</h1>

<hr />

<form method="post" class="edit-form-container">
    <div asp-validation-summary="ModelOnly"></div>

    <input type="hidden" asp-for="Recipe.UserID" />

    <label asp-for="Recipe.Name">Namn: </label>
    <input asp-for="Recipe.Name" />
    <span asp-validation-for="Recipe.Name"></span>

    <label asp-for="Recipe.Description">Beskrivning/Noteringar: </label>
    <input asp-for="Recipe.Description" />
    <span asp-validation-for="Recipe.Description"></span>

    <label asp-for="Recipe.Instructions">Instruktioner: </label>
    <input asp-for="Recipe.Instructions" />
    <span asp-validation-for="Recipe.Instructions"></span>

    <select name="Recipe.MealCategory" asp-for="Recipe.MealCategory" asp-items="Html.GetEnumSelectList<Models.MealCategory>()">
        <option value="" disabled selected>Välj kategori</option>
    </select>

    <label asp-for="Recipe.Difficulty">Svårighetsgrad</label>
    <select asp-for="Recipe.Difficulty">
        @for (int i = 1; i < 6; i++)
        {
            if (@Model.Recipe.Difficulty == i)
            {
                <option value="@i" selected>@i</option>
            }
            else
            {
                <option value="@i">@i</option>
            }

        }
    </select>
    <span asp-validation-for="Recipe.Difficulty"></span>

    <div id="submit-button-container">
        <input type="submit" value="Skapa recept" />
    </div>
</form>


<div class="bottom-buttons">
    <a asp-page="Index">Tillbaka till receptlistan.</a>
</div>


