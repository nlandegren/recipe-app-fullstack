@page
@model FullStackRecipeApp.Pages.MealPlans.DeleteModel


<h1 class="page-headers">@Model.MealPlan.Name | Vecka @Model.MealPlan.WeekNumber</h1>


<div>
    <div>
        <hr />

        @foreach (var day in Model.WeekDays)
        {

            <dl>
                <dt>
                    @day
                </dt>
                @foreach (var meal in @Model.PlannedMeals.Where(m => m.WeekDay == day).ToList())
                {
                    <dd>
                        <a asp-page="../Recipes/Details" asp-route-id="@meal.RecipeID">
                            @meal.Recipe.Name
                        </a>
                    </dd>
                }
            </dl>
        }

    </div>

    <h2 class="page-headers">Vill du verkligen ta bort planeringen?</h2>

    <form method="post" class="edit-form-container">
        <input type="hidden" asp-for="MealPlan.ID" />
        <input type="submit" value="Ta bort planering" />
    </form>

    <div class="bottom-buttons">
        <a asp-page="./Index">Tillbaka till planeringar</a>
    </div>
</div>
